FROM node:18-alpine

WORKDIR /app

# 复制package.json和package-lock.json
COPY ../aivisual-hub/package*.json ./

# 安装依赖
RUN npm install

# 复制前端源代码
COPY ../aivisual-hub/ ./

# 构建生产版本
RUN npm run build

# 安装serve来运行生产构建
RUN npm install -g serve

# 暴露端口
EXPOSE 3000

# 启动应用
CMD ["serve", "-s", "build", "-l", "3000"]